{
  "orchestrator": {
    "state_machine": [
      "PLAN",
      "GATHER_DIFF",
      "RUN_LINTERS",
      "REVIEW_CHUNKS",
      "CRITIQUE_VALIDATE",
      "POST_COMMENTS",
      "SUMMARIZE",
      "DONE"
    ],
    "failure_states": ["SELF_HEAL_RETRY", "FAIL_GRACEFULLY"],
    "max_retries_per_state": 2,
    "max_runtime_seconds": 300,
    "max_comments": 20,
    "token_budget_per_call": 1500,
    "summarize_on_overflow": true
  },
  "planner": {
    "max_files_per_run": 50,
    "max_chunks_per_file": 10,
    "priority_order": ["error", "warn", "info"],
    "skip_patterns": [
      "*.lock", "*.min.js", "*.min.css", "vendor/**",
      "node_modules/**", "dist/**", "*.pb.go", "*.generated.*"
    ]
  },
  "reviewer": {
    "temperature": 0.1,
    "max_output_tokens": 800,
    "enforce_json_schema": true,
    "schema_failure_retries": 2,
    "context_lines": 3,
    "chunk_max_lines": 300
  },
  "critic": {
    "dedupe_hash_length": 12,
    "severity_order": ["error", "warn", "info"],
    "min_severity": "info",
    "max_duplicates_allowed": 0,
    "contradiction_check": true
  },
  "commenter": {
    "summary_marker": "<!-- AI-REVIEW-SUMMARY -->",
    "inline_prefix": true,
    "max_inline_comments": 20,
    "nit_consolidation": true,
    "nit_threshold": 3,
    "dry_run": false
  }
}
